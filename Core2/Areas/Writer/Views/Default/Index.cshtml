@using EntityLayer.Concrete
@model List<Annoncoument>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Baslik</th>
                            <th>Tarih</th>
                            <th>Tur</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "Blog")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Video")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Konferans")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Status == "Arastirma")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status == "Online")
                            {
                                color = "badge badge-primary";
                            }

                        <tr>
                            <th>@item.ID</th>
                            <td>@item.Title</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyy"))  </td>
                           <td><label class="@color">@item.Status </label></td>
                                <td> <a href="/Writer/Default/AnnoncoumentDetails/@item.ID" class="btn btn-outline-primary">Detaylar </a> </td>
                        </tr>
                        }
