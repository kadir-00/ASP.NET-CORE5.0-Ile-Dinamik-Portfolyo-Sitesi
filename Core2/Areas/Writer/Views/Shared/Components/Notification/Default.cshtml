@using EntityLayer.Concrete
@model List<Annoncoument>

@{
    string color = " ";
}
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>

    @foreach (var item in Model)
    {
        if (item.Status == "Blog")
        {
            color = "text-success";
        }
        if (item.Status == "Video")
        {
            color = "text-warning";
        }
        if (item.Status == " Arastirma")
        {
            color = "text-info";
        }
        if (item.Status == "Konferans")
        {
            color = "text-primary";
        }
        if (item.Status == "Online")
        {
            color = "text-danger";
        }

        <a class="dropdown-item preview-item" href="/Writer/Default/AnnouncementDetails/@item.ID">
            <div class="preview-thumbnail">
                <div class="preview-icon">
                    <i class="ti-info-alt mx-0 @color"></i>
                </div>
            </div>

            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @item.Status
                </p>
            </div>
        </a>
    }
</div>
