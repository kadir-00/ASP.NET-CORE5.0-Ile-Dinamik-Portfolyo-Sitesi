@model EntityLayer.Concrete.Annoncoument
@{
    ViewData["Title"] = "AddAnnoncoument";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Duyuru Ekleme Sayfası</h3>
</div>

@using (Html.BeginForm("AddAnnoncoument", "Annoncoument", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Duyuru Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Title" placeholder="Duyuru Başlığı">
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        <textarea class="form-control" name="Content" rows="5" placeholder="Duyuru İçeriği"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark"> İptal </button>
                </form>
            </div>
        </div>
    </div>
}
