@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails2";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Gönderen Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="SenderName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Konu</label>
                        <input type="text" class="form-control" id="exampleInputEmail3" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Mesaj İçeriği</label>
                        <textarea class="form-control" id="exampleTextarea1" rows="20"
                            asp-for="MessageContent"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
