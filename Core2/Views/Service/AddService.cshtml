@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Servis Ekleme Sayfasi</h3>
</div>

@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
    @Html.HiddenFor(x => x.ServiceID)
    <br />
    @Html.Label("Deneyim Basligi")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
   
    <label>Resim Yolu </label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </form>
            </div>
        </div>
    </div>
    <br />
    <button class="btn btn-outline-success"> Kaydet </button>

}

