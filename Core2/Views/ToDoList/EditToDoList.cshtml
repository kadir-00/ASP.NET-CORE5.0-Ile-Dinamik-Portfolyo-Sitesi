@model EntityLayer.Concrete.ToDoList
@{
    ViewData["Title"] = "EditToDoList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditToDoList", "ToDoList", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description"> Görev Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Durum</label>
                        @Html.CheckBoxFor(x => x.Status, new { @class = "form-check-input" })
                        <span>Tamamlandı</span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark"> İptal </button>
                </form>
            </div>
        </div>
    </div>
}
