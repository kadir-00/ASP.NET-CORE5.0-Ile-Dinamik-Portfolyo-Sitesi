@using EntityLayer.Concrete
@model List<WriterUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kullanici Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Kullanici Adi</th>
                                <th>Rol Ata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td><a href="/AdminRole/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                     <a href="/AdminRole/Index/" class="btn btn-primary mt-3">Rol Listesine Don</a>
                </div>
            </div>
        </div>
    </div>
</div>
