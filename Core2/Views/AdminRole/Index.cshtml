@using EntityLayer.Concrete
@model List<WriterRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rol Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Rol Adi</th>
                                <th>Sil</th>
                                <th>Guncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td><a href="/AdminRole/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/AdminRole/UpdateRole/@item.Id" class="btn btn-success">Guncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminRole/AddRole/" class="btn btn-primary mt-3">Yeni Rol Ekle</a>
                    <a href="/AdminRole/UserRoleList/" class="btn btn-info mt-3">Kullanici Listesi & Rol Atama</a>
                </div>
            </div>
        </div>
    </div>
</div>
