@model List<Core2.Models.RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rol Atama Islemi (Kullaniciya Yetki Ver)</h4>
                <form class="forms-sample" method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].RoleID" />
                            <input type="hidden" asp-for="@Model[i].Name" />
                            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].Exists">@Model[i].Name</label>
                        </div>
                    }
                    <button type="submit" class="btn btn-primary mr-2">Degisiklikleri Kaydet</button>
                    <a href="/AdminRole/UserRoleList/" class="btn btn-dark">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
