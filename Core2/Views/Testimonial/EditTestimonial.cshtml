@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Referans Duzenleme Sayfasi</h3>
</div>

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description"> Referans Duzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Isim Soyisim</label>
                        @Html.TextBoxFor(x => x.ClientName , new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Sirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div> 
                    <div class="form-group">
                        <label>Unvan</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gorsel</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x => x.Description ,6,3, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark"> Iptal </button>
                </form>
            </div>
        </div>
    </div>

}

