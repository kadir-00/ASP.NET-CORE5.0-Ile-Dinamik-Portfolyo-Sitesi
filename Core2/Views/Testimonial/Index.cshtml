@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                              
                                <th> # </th>
                                <th> Isim Soyisim </th>
                                <th> Sirket </th>
                                <th> Unvan </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                               
                                <td>
                                    <img src="@item.ImageUrl" alt="image" />
                                  @*   <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face1.jpg" alt="image" /> *@
                                  
                                </td>
                                <td> @item.ClientName </td>
                                <td> @item.Company </td>
                                <td> @item.Title </td>
                                <td>  <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger"> Sil </a>  </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-success"> Detaylar </a> </td>
                               
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

