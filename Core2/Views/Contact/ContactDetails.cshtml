@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Mesaj Detay Sayfasi  </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Baslik</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Resim</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Aciklama</label>
                        @Html.TextAreaFor(x => x.Content, 5, 3, new { @class = "form-control" })
                    </div>
                    <a asp-action="Index" class="btn btn-primary mr-2">Iletisim Sayfasi</a>
                  
                </form>
            </div>
        </div>
    </div>





