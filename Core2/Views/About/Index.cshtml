@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Yaş</th>
                            <th>Mail</th>
                            <th>Telefon</th>
                            <th>Adres</th>
                            <th>Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.Title</td>
                                <td>@item.Age</td>
                                <td>@item.Mail</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>@item.ImageUrl</td>
                                <td> <a href="/About/DeleteAbout/@item.AboutID/" class="btn btn-outline-danger"> SIL </a>
                                </td>
                                <td> <a href="/About/EditAbout/@item.AboutID/" class="btn btn-outline-info"> GUNCELLE </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/About/AddAbout/" class="btn btn-outline-success"> Yeni Hakkımda Bilgisi Ekle </a>
            </div>
        </div>
    </div>
</div>
